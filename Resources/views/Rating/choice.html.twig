{% spaceless %}
    <div class="article discutea-rating-container">
        {% for i in maxValue..1 %}
            {% set style = '' %}
            {% if i <= rating.rate %}
                {% set style = 'full' %}
            {% else %}
                {% set style = rating.rate|isHalfStar(i) ? 'half' %}
            {% endif %}
            {% set params = params|merge({'id' : rating.id, 'value' : i}) %}
            <a href="{{ url('discutea_rating_add_vote', params) }}" class="star {{ style }}">â˜†</a>
        {% endfor %}
    </div>

    <div class="total_votes">
        <span>{{ rating.numVotes }}</span> votes ( moyenne: <span>{{ rating.rate }}</span>/5 )
    </div>
{% endspaceless %}
