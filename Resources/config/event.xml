<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="discutea_rating.listener.rating_update_info.class">Discutea\RatingBundle\EventListener\RatingUpdateInfoEventListener</parameter>
        <parameter key="discutea_rating.listener.rating_update_rate.class">Discutea\RatingBundle\EventListener\RatingUpdateRateEventListener</parameter>
    </parameters>

    <services>
        <service id="discutea_rating.listener.rating_update_info" class="%discutea_rating.listener.rating_update_info.class%">
            <call method="setRequest">
                <argument type="service" id="request" on-invalid="null" strict="false" />
            </call>
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="discutea_rating.listener.rating_update_rate" class="%discutea_rating.listener.rating_update_rate.class%">
            <argument type="service" id="discutea_rating.manager.rating" />
            <argument type="service" id="discutea_rating.manager.vote" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>

</container>
