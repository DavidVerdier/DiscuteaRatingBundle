    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="discutea_rating.twig.rating_extension.class">Discutea\RatingBundle\Twig\RatingExtension</parameter>
    </parameters>

    <services>
        <service id="discutea_rating.twig.rating_extension" class="%discutea_rating.twig.rating_extension.class%">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
    </services>

</container>
