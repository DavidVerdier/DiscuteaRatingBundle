<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="discutea_rating.model.rating.class">Discutea\RatingBundle\Entity\Rating</parameter>
        <parameter key="discutea_rating.model.vote.class">Discutea\RatingBundle\Entity\Vote</parameter>

        <parameter key="discutea_rating.manager.rating.default.class">Discutea\RatingBundle\Entity\RatingManager</parameter>
        <parameter key="discutea_rating.manager.vote.default.class">Discutea\RatingBundle\Entity\VoteManager</parameter>
    </parameters>

    <services>
        <service id="discutea_rating.manager.rating.default" class="%discutea_rating.manager.rating.default.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%discutea_rating.model.rating.class%</argument>
        </service>
        <service id="discutea_rating.manager.vote.default" class="%discutea_rating.manager.vote.default.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%discutea_rating.model.vote.class%</argument>
        </service>
    </services>

</container>
